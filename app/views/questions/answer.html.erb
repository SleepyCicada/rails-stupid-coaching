<h1> Stupid coaching </h1>

<%= form_with url: answer_path, method: :get do %>
  <div>
    <label for="input">Your message:</label>
    <%= text_field_tag :input, nil %>
    <%# <%= text_field_tag :input, params[:input] %>
  </div>
  <div>
    <%= submit_tag "Ask" %>
  </div>
<% end %>

<% if @response.present? %>
  <h2>Coach's Response:</h2>
  <p><%= @response %></p>
<% end %>
